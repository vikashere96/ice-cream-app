# ============================================
# Ice Cream QR Ordering System - Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git!

# ============================================
# Django Configuration
# ============================================
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True  # Set to False in production

# ============================================
# Email Configuration (Gmail)
# ============================================
# How to get Gmail App Password:
# 1. Go to https://myaccount.google.com/apppasswords
# 2. Enable 2-Step Verification if not enabled
# 3. Create app password for "Mail"
# 4. Copy the 16-character password (remove spaces)

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-char-app-password-here
DEFAULT_FROM_EMAIL=your-email@gmail.com

# ============================================
# Payment Configuration
# ============================================

# UPI Payment (Required)
UPI_MERCHANT_ID=your-upi-id@bank
UPI_MERCHANT_NAME=Your Shop Name

# Razorpay (Optional - for card/wallet payments)
# Sign up at https://razorpay.com to get keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ============================================
# Security Settings
# ============================================
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_SECURE=False     # Set to True in production with HTTPS
